    //contMotor = 0;
    palabra = "Fin de carrera";
    varMotor = text3;

  } else {

    if (bandera2 == true) {
      palabra = "Fin De Carrera 2";
      varMotor = text3;
      fin_carrera(pin2, pin1, 400);
